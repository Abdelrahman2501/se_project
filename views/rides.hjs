<!DOCTYPE html>
<html>
  <head>
    <title>Rides</title>
    <link rel="stylesheet" href="/styles/bootstrap.min.css" />
    <link rel="stylesheet" href="/styles/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <link rel="stylesheet" href="/styles/custom-style.css" />
    <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <style>
      /* Add custom styles for the rides table here */
      #rides-table {
        margin-top: 20px;
      }

      #rides-table th,
      #rides-table td {
        vertical-align: middle;
      }
    </style>
    <script>
      $(document).ready(function () {
        $.ajax({
          url: "/api/v1/ridesUser",
          type: "GET",
          success: function (rides) {
            var ridesTable = $("#rides-table");

            rides.forEach(function (ride) {
              var row = $("<tr>");

              row.append($("<td>").text(ride.id));
              row.append($("<td>").text(ride.status));
              row.append($("<td>").text(ride.origin));
              row.append($("<td>").text(ride.destination));
              row.append($("<td>").text(ride.userid));
              row.append($("<td>").text(ride.ticketid));
              row.append($("<td>").text(ride.tripdate));

              ridesTable.append(row);
            });
          },
          error: function () {
            alert("Error retrieving rides");
          },
        });
      });
    </script>
  </head>
  <body>
    <div class="container" style="margin-top: 20px"></div>
    <div class="container">
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/dashboard">Dashboard</a>
          </div>
          <ul class="nav navbar-nav">
            <li class="active">
              <a href="/dashboard"><i class="fas fa-home"></i> Home</a>
            </li>
            <li>
              <a href="/stations"><i class="fas fa-subway"></i> Station</a>
            </li>
            <li class="dropdown">
              <a
                href="#"
                class="dropdown-toggle"
                data-toggle="dropdown"
                role="button"
                aria-haspopup="true"
                aria-expanded="false"
              >
                <i class="fas fa-shopping-cart"></i>
                Shop
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a href="/tickets"
                    ><i class="fas fa-ticket-alt"></i> Tickets</a
                  >
                </li>
                <!-- Add other shop-related options here -->
              </ul>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <a href="/"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </li>
          </ul>
        </div>
      </nav>
      <h1>Rides</h1>
      <table id="rides-table" class="table table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Status</th>
            <th>Origin</th>
            <th>Destination</th>
            <th>User ID</th>
            <th>Ticket ID</th>
            <th>Trip Date</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </body>
</html>
