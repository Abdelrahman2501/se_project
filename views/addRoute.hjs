    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h2>Create Route</h2>
        <form id="createRouteForm" action="/api/v1/route" method="POST">
          <div class="form-group">
            <label for="routeName">Route Name:</label>
            <input type="text" class="form-control" id="routeName" name="routeName" required>
          </div>
          <div class="form-group">
            <label for="newStationId">New Station ID:</label>
            <input type="text" class="form-control" id="newStationId" name="newStationId" required>
          </div>
          <div class="form-group">
            <label for="connectedStationId">Connected Station ID:</label>
            <input type="text" class="form-control" id="connectedStationId" name="connectedStationId" required>
          </div>
          <button type="submit" class="btn btn-primary">Create</button>
        </form>
      </div>
    </div>
  </div>
  <script>
    $(document).ready(function() {
      $('#createRouteForm').submit(function(e) {
        e.preventDefault();
        
        // Fetch form values
        const routeName = $('#routeName').val();
        const newStationId = $('#newStationId').val();
        const connectedStationId = $('#connectedStationId').val();
        
        // Create request body
        const requestBody = JSON.stringify({
          routeName,
          newStationId,
          connectedStationId
        });
        
        // Send the request
        $.ajax({
          url: '/api/v1/route',
          type: 'POST',
          contentType: 'application/json',
          data: requestBody,
          success: function(response) {
            alert('Route created successfully');
            console.log(response);
          },
          error: function(error) {
            alert('Error creating route');
            console.log(error);
          }
        });
      });
    });
  </script>
