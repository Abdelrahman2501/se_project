<!DOCTYPE html>
<html>
<head>
  <title>Delete Route</title>
  <link rel="stylesheet" href="/styles/bootstrap.min.css" />
  <link rel="stylesheet" href="/styles/style.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
  <link rel="stylesheet" href="/styles/custom-style.css" />
  <style>
    /* CSS styles for the delete route page */
    .delete-route-form {
      margin-top: 20px;
    }
    .delete-route-input {
      margin-bottom: 10px;
    }
    .delete-route-button {
      margin-top: 10px;
    }
  </style>
</head>
<body>
  <div class="container">
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/dashboard">Dashboard</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="active">
            <a href="/dashboard"><i class="fas fa-home"></i> Home</a>
          </li>
          <li>
            <a href="/stations"><i class="fas fa-subway"></i> Station</a>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              <i class="fas fa-shopping-cart"></i>
              Shop
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li>
                <a href="/tickets"><i class="fas fa-ticket-alt"></i> Tickets</a>
              </li>
              <!-- Add other shop-related options here -->
            </ul>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <a href="/"><i class="fas fa-sign-out-alt"></i> Logout</a>
          </li>
        </ul>
      </div>
    </nav>

    <h1 class="page-title">Delete Route</h1>
    <form class="delete-route-form">
      <div class="form-group">
        <label for="route-id">Route ID:</label>
        <input type="text" class="form-control delete-route-input" id="route-id" placeholder="Enter the route ID">
      </div>
      <button type="button" class="btn btn-danger delete-route-button">Delete Route</button>
    </form>
  </div>

  <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
  <script src="/js/bootstrap.min.js" type="text/javascript"></script>
  <script>
    $(document).ready(function () {
      $(".delete-route-button").click(function () {
        var routeId = $("#route-id").val();

        if (routeId) {
          deleteRoute(routeId);
        } else {
          alert("Route ID is required.");
        }
      });

      function deleteRoute(routeId) {
        $.ajax({
          url: "/api/v1/route/" + routeId,
          type: "DELETE",
          success: function (response) {
            console.log(response.message);
            // Perform any additional actions after a successful delete
            alert("Route deleted successfully.");
          },
          error: function (xhr, status, error) {
            console.log("Error deleting route:", error);
            // Handle the error appropriately
            alert("Error deleting route. Please try again.");
          }
        });
      }
    });
  </script>
</body>
</html>
