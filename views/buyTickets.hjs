<html>
  <head>
    <title>Ticket Purchase</title>
    <link rel="stylesheet" href="/styles/bootstrap.min.css" />
    <link rel="stylesheet" href="/styles/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <script
      src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"
    ></script>
    <style>
      .welcome-message { font-size: 20px; font-weight: bold; color: #333;
      margin-top: 20px; } #user-name { color: #007bff; }
    </style>
    <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
  </head>
  <body>
    <div class="container" style="margin-top: 20px">
      <div>
        <nav class="navbar navbar-inverse">
          <div class="container-fluid">
            <div class="navbar-header">
              <a class="navbar-brand" href="/dashboard">Dashboard</a>
            </div>
            <ul class="nav navbar-nav">
              <li class="active">
                <a href="/dashboard">
                  <i class="fas fa-home"></i>
                  Home
                </a>
              </li>
              <li>
                <a href="/stations_example">
                  <i class="fas fa-subway"></i>
                  Station
                </a>
              </li>
              <li>
                <a href="/users">
                  <i class="fas fa-users"></i>
                  Users
                </a>
              </li>
              <li class="dropdown">
                <a
                  href="#"
                  class="dropdown-toggle"
                  data-toggle="dropdown"
                  role="button"
                  aria-haspopup="true"
                  aria-expanded="false"
                >
                  <i class="fas fa-shopping-cart"></i>
                  Shop
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <a href="/tickets">
                      <i class="fas fa-ticket-alt"></i>
                      Tickets
                    </a>
                  </li>
                  <!-- Add other shop-related options here -->
                </ul>
              </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a
                  href="#"
                  class="dropdown-toggle"
                  data-toggle="dropdown"
                  role="button"
                  aria-haspopup="true"
                  aria-expanded="false"
                >
                  <i class="fas fa-user-cog"></i>
                  User Options
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <li>
                    <a href="/resetPassword">
                      <i class="fas fa-lock"></i>
                      Reset Password
                    </a>
                  </li>
                  <li>
                    <a href="/requests/refund">
                      <i class="fas fa-undo"></i>
                      Refund Ticket
                    </a>
                  </li>
                  <li>
                    <a href="/requests/senior">
                      <i class="fas fa-user-plus"></i>
                      Senior Request
                      <i class="fas fa-star"></i>
                    </a>
                  </li>
                  <li>
                    <a href="/rides">
                      <i class="fas fa-subway"></i>
                      Rides
                    </a>
                  </li>
                  <!-- Add other user-related options here -->
                </ul>
              </li>
              <li>
                <a href="/logout">
                  <i class="fas fa-sign-out-alt"></i>
                  Logout
                </a>
              </li>
            </ul>
          </div>
        </nav>
      </div>
      <h1>Ticket Purchase</h1>
      <form id="purchaseForm">
        <div class="form-group">
          <input type="hidden" id="userRole" value="{{userRole}}" />
          <label for="creditCardNumber">Credit Card Number:</label>
          <input
            type="text"
            id="creditCardNumber"
            name="creditCardNumber"
            class="form-control"
            placeholder="Credit Card Number"
            required
          />
        </div>
        <div class="form-group">
          <label for="holderName">Holder Name:</label>
          <input
            type="text"
            id="holderName"
            name="holderName"
            class="form-control"
            placeholder="Holder Name"
            required
          />
        </div>
        <div class="form-group">
          <label for="payedAmount">Payed Amount:</label>
          <input
            type="number"
            id="payedAmount"
            name="payedAmount"
            class="form-control"
            placeholder="Payed Amount"
            required
          />
        </div>
        <div class="form-group">
          <label for="origin">Origin:</label>
          <input
            type="text"
            id="origin"
            name="origin"
            class="form-control"
            placeholder="Origin"
            required
          />
        </div>
        <div class="form-group">
          <label for="destination">Destination:</label>
          <input
            type="text"
            id="destination"
            name="destination"
            class="form-control"
            placeholder="Destination"
            required
          />
        </div>
        <div class="form-group">
          <label for="tripDate">Trip Date:</label>
          <input
            type="date"
            id="tripDate"
            name="tripDate"
            class="form-control"
            placeholder="Trip Date"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Purchase Ticket</button>
      </form>
      <p id="purchaseResult" class="mt-3"></p>
    </div>
  </body>
</html>