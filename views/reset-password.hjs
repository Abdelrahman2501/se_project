<!DOCTYPE html>
<html>
  <head>
    <title>Reset Password</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
    />
    <style>
      body {
        background-image: url("views/metro.jpg");
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
      }

      .container {
        max-width: 500px;
        margin: 30px auto;
        padding: 20px;
      }
    </style>
    <script>
      function resetPassword(event) {
        event.preventDefault();

        const form = document.getElementById("resetPasswordForm");
        const newPasswordInput = document.getElementById("newPassword");
        const confirmPasswordInput = document.getElementById("confirmPassword");

        if (
          validatePassword(newPasswordInput.value, confirmPasswordInput.value)
        ) {
          const passwordData = {
            newpassword: newPasswordInput.value,
            confirmpassword: confirmPasswordInput.value,
          };

          const loader = document.createElement("div");
          loader.classList.add("loader");
          document.querySelector(".container").appendChild(loader);

          const xhr = new XMLHttpRequest();
          xhr.open("PUT", "/api/v1/password/reset");
          xhr.setRequestHeader("Content-Type", "application/json");
          xhr.onreadystatechange = function () {
            if (xhr.readyState === 4) {
              document.querySelector(".loader").remove();
              if (xhr.status === 200) {
                const successMessage = xhr.responseText;
                showSuccess(successMessage);
              } else {
                const errorMessage = "Error updating password.";
                showError(errorMessage);
              }
            }
          };
          xhr.send(JSON.stringify(passwordData));
        }
      }

      function validatePassword(password, confirmPassword) {
        if (password.length < 8) {
          showError("Password must be at least 8 characters");
          return false;
        }
        if (password !== confirmPassword) {
          showError("Passwords do not match");
          return false;
        }
        return true;
      }

      function showError(errorMessage) {
        const errorElement = document.getElementById("errorMessage");
        errorElement.textContent = errorMessage;
        errorElement.classList.remove("d-none");
      }

      function showSuccess(successMessage) {
        const successModal = document.getElementById("successModal");
        const successMessageElement = document.getElementById("successMessage");
        successMessageElement.textContent = successMessage;
        successModal.classList.add("show");
        successModal.style.display = "block";
      }

      function closeSuccessModal() {
        const successModal = document.getElementById("successModal");
        successModal.classList.remove("show");
        successModal.style.display = "none";
      }
    </script>
  </head>
