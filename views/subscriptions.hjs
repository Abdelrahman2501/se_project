<!DOCTYPE html>
<html>
  <head>
    <title>Subscriptions</title>
    <link rel="stylesheet" href="/styles/bootstrap.min.css" />
    <link rel="stylesheet" href="/styles/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <link rel="stylesheet" href="/styles/custom-style.css" />
    <style>
      /* Custom styles */
      .container {
        margin-top: 20px;
      }

      h1 {
        margin-bottom: 20px;
      }

      label {
        font-weight: bold;
      }

      input[type="text"],
      input[type="number"],
      select {
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
      }

      button[type="submit"] {
        background-color: #4caf50;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }

      .alert {
        display: none;
        margin-top: 20px;
      }

      .alert-success {
        background-color: #d4edda;
        color: #155724;
      }

      .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
      }

      /* Table styles */
      .zone-table {
        margin-top: 20px;
        border-collapse: collapse;
        width: 100%;
      }

      .zone-table th,
      .zone-table td {
        border: 1px solid #ddd;
        padding: 8px;
      }

      .zone-table th {
        background-color: #f2f2f2;
      }

      .zone-table tr:hover {
        background-color: #f5f5f5;
        cursor: pointer;
      }
    </style>
    <script src="/js/jquery-2.2.0.min.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>
    <script>
      $(document).ready(function () {
        // Fetch zones and populate the table
        $.ajax({
          type: "GET",
          url: "/api/v1/zones",
          success: function (zones) {
            const tableBody = $("#zone-table-body");
            zones.forEach(function (zone) {
              const row = `<tr class="zone-row" data-zone-id="${zone.id}">
               <td>${zone.id}</td>
               <td>${zone.zonetype}</td>
               <td>${zone.price}</td>
             </tr>`;
              tableBody.append(row);
            });
          },
          error: function (xhr, status, error) {
            console.log("Error fetching zones");
          },
        });

        // Handle zone click event
        $(document).on("click", ".zone-row", function () {
          const zoneId = $(this).data("zone-id");
          $("#zone-id").val(zoneId);
        });

        // Handle form submission
        $("#subscription-form").submit(function (event) {
          event.preventDefault(); // Prevent form from submitting normally

          // Gather form data
          const creditCardNumber = $("#credit-card-number").val();
          const holderName = $("#holder-name").val();
          const payedAmount = $("#payed-amount").val();
          const subType = $("#sub-type").val();
          const zoneId = $("#zone-id").val();

          // Create payload
          const payload = {
            creditCardNumber,
            holderName,
            payedAmount,
            subType,
            zoneId,
          };

          // Make AJAX request
          $.ajax({
            type: "POST",
            url: "/api/v1/payment/subscription",
            data: JSON.stringify(payload),
            contentType: "application/json",
            success: function (response) {
              // Handle success response
              $("#success-message").text(response.message);
              $("#success-message").fadeIn().delay(3000).fadeOut();
              console.log(response.subscriptionId);
              console.log(response.transactionId);
              console.log(response.paid);
            },
            error: function (xhr, status, error) {
              // Handle error response
              const response = JSON.parse(xhr.responseText);
              $("#error-message").text(response.error);
              $("#error-message").fadeIn().delay(3000).fadeOut();
            },
          });
        });
      });
    </script>
  </head>
  <body>
    <div class="container">
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="/dashboard">Dashboard</a>
          </div>
          <ul class="nav navbar-nav">
            <li class="active">
              <a href="/dashboard"><i class="fas fa-home"></i> Home</a>
            </li>
            <li>
              <a href="/stations"><i class="fas fa-subway"></i> Station</a>
            </li>
            <li>
              <a href="/routes"> <i class="fas fa-route"></i> Routes </a>
            </li>
            <li class="dropdown">
              <a
                href="#"
                class="dropdown-toggle"
                data-toggle="dropdown"
                role="button"
                aria-haspopup="true"
                aria-expanded="false"
              >
                <i class="fas fa-shopping-cart"></i> Shop
                <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <a href="/tickets"
                    ><i class="fas fa-ticket-alt"></i> Tickets</a
                  >
                </li>
                <!-- Add other shop-related options here -->
              </ul>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <a href="/"><i class="fas fa-sign-out-alt"></i> Logout</a>
            </li>
          </ul>
        </div>
      </nav>

      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <h1>Subscriptions</h1>

          <!-- Subscription form -->
          <form id="subscription-form">
            <div class="form-group">
              <label for="credit-card-number">Credit Card Number:</label>
              <input
                type="text"
                id="credit-card-number"
                class="form-control"
                required
              />
            </div>
            <div class="form-group">
              <label for="holder-name">Holder Name:</label>
              <input
                type="text"
                id="holder-name"
                class="form-control"
                required
              />
            </div>
            <div class="form-group">
              <label for="payed-amount">Paid Amount:</label>
              <input
                type="number"
                id="payed-amount"
                class="form-control"
                required
              />
            </div>
            <div class="form-group">
              <label for="sub-type">Subscription Type:</label>
              <select id="sub-type" class="form-control" required>
                <option value="annual">Annual (EGP 100)</option>
                <option value="quarterly">Quarterly (EGP 50)</option>
                <option value="monthly">Monthly (EGP 25)</option>
              </select>
            </div>

            <div class="form-group">
              <label for="zone-id">Zone:</label>
              <input type="text" id="zone-id" class="form-control" readonly />
            </div>
            <button type="submit" class="btn btn-primary">Subscribe</button>
          </form>

          <!-- Error and success messages -->
          <div class="alert alert-danger" id="error-message"></div>
          <div class="alert alert-success" id="success-message"></div>

          <!-- Zone table -->
          <table class="zone-table">
            <thead>
              <tr>
                <th>Zone ID</th>
                <th>Zone Type</th>
                <th>Price</th>
              </tr>
            </thead>
            <tbody id="zone-table-body"></tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
